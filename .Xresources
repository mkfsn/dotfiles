#Xterm Settings
#============================================================
xterm*Background: grey5
xterm*Foreground: LightGoldenrodYellow
xterm*scrollBar:  false
#xterm*font:    *-terminus-*-*-*-14-*
xterm*FaceName:   Terminus
xterm*FaceSize:   12
#xterm*FaceSize:   40
#xterm*FaceName:   Awesome
xterm*FaceNameDoublesize: WenQuanYi 
xterm*FontSize:   7
xterm*altSendsEscape: true
xterm*metaSendsEscape: true
#xterm -fg LightGoldenrodYellow -bg grey5 -fa Terminus -fs 12


#URxvt Settings
#============================================================
#More Setting about urxvt: 
#   https://wiki.archlinux.org/index.php/rxvt-unicode
#   http://www.askapache.com/linux/rxvt-xresources.html
#   http://awesome.naquadah.org/wiki/Urxvt

#utils
Rxvt.perl-lib: /usr/lib/urxvt/perl/
Rxvt.perl-ext-common: default,matcher
Rxvt.url-launcher: /usr/bin/chromium
Rxvt.matcher.button: 1
Rxvt*colorUL: yellow
Rxvt*saveLines: 0

#keymap
URxvt*keysym.Home: \033[1~
URxvt*keysym.End: \033[4~

#Rxvt*font: xft:Terminus:size=120:antialias=True
#Rxvt*boldfont: xft:Terminus:size=120:antialias=True


#Appearence
Rxvt*visualBell: false
Rxvt*scrollBar:  false
Rxvt*font:       xft:dina:size=12
Rxvt*boldFont:   xft:dina:bold:size=12
Rxvt*italicFont: xft:dina:italic:size=12
Rxvt*font:       xft:dina:bolditalic:size=12

!# color settings: 
!#   http://sdkmvx.wordpress.com/2008/08/13/rxvt-unicode-terminal-colors
Rxvt*background: #0f0f0f
Rxvt*foreground: #c8c8c8
!black
Rxvt*color0:     #251f1f
Rxvt*color8:     #5e5e5e
!red
Rxvt*color1:     #eb4509
Rxvt*color9:     #eb4509
!green
Rxvt*color2:     #94e76b
Rxvt*color10:    #95e76b
!yellow
Rxvt*color3:     #ffac18
Rxvt*color11:    #ffac18
!blue
Rxvt*color4:     #46aede
Rxvt*color12:    #46aede
!magenta
Rxvt*color5:     #e32c57
Rxvt*color13:    #e32c57
!cyan
Rxvt*color6:     #d6dbac
Rxvt*color14:    #d6dbac
!white
Rxvt*color7:     #efefef
Rxvt*color15:    #efefef

Rxvt*transparent: true
Rxvt*shading: 20

